{
    "manifest_version": 3,
    "name": "FormCompleter",
    "description": "Extension helps generate data for form controls",
    "version": "0.1",
    "author": "Krzysztof BrÄ…czyk",

    "icons": {
        "16": "./assets/icon.png",
        "48": "./assets/icon.png",
        "128": "./assets/icon.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_icon": "./assets/icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["contentScript.js"]
    }],

    "permissions": ["activeTab", "tabs", "contextMenus"]
}